@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<title>Waraporn Salapao Admin | Login</title>
<link rel="shortcut icon" type="image/png" href="~/images/favicon.ico" />
<link href="~/css/login.css" rel="stylesheet" />

<<div class="login">
    <div class="login-wrap">
        <section>
            <form method="post">
                <div style="text-align:center">
                    <img src="~/images/wrplogo_transparent.png" class="w-100" />
                </div>
                <hr class="line-white" />
                <div class="red"></div>
                <div class="form-group">
                    <input class="form-control inputfield" id="email" placeholder="Username" type="email" autocomplete="off" required />
                    @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <input class="form-control inputfield" id="pass" placeholder="Password" type="password" autocomplete="off" required />
                    @*<span asp-validation-for="Input.Password" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <button type="button" class="btn inputsubmit" id="btnSubmit">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

<script src="~/lib/js-cookie/js.cookie.min.js"></script>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/login.js"></script>